<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Productos_nuevo">

    <EditText
        android:id="@+id/txtpreciopr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/txtnombrepr"
        tools:layout_editor_absoluteX="122dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="Precio"
        app:layout_constraintEnd_toStartOf="@+id/txtpreciopr"
        tools:layout_editor_absoluteY="145dp" />

    <Button
        android:id="@+id/btnproductoconfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:text="Agregar"
        app:layout_constraintTop_toBottomOf="@+id/txtdescripcionpr"
        tools:layout_editor_absoluteX="153dp" />

    <EditText
        android:id="@+id/txtnombrepr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="122dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:text="Nombre"
        app:layout_constraintEnd_toStartOf="@+id/txtnombrepr"
        tools:layout_editor_absoluteY="83dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="171dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="140dp"
        android:text="Producto Nuevo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:text="Marca"
        app:layout_constraintEnd_toStartOf="@+id/combomarca"
        tools:layout_editor_absoluteY="210dp" />

    <Spinner
        android:id="@+id/combomarca"
        android:layout_width="168dp"
        android:layout_height="31dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/txtpreciopr"
        tools:layout_editor_absoluteX="122dp" />

    <Spinner
        android:id="@+id/combocategoria"
        android:layout_width="169dp"
        android:layout_height="27dp"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/combomarca"
        tools:layout_editor_absoluteX="122dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:text="Categoria"
        app:layout_constraintEnd_toStartOf="@+id/combocategoria"
        tools:layout_editor_absoluteY="249dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:text="Descripcion"
        app:layout_constraintEnd_toStartOf="@+id/txtdescripcionpr"
        tools:layout_editor_absoluteY="307dp" />

    <EditText
        android:id="@+id/txtdescripcionpr"
        android:layout_width="234dp"
        android:layout_height="211dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/combocategoria"
        tools:layout_editor_absoluteX="122dp" />

</androidx.constraintlayout.widget.ConstraintLayout>